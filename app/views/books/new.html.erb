<% provide(:title, 'Add book') %>
<h1>new book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      <%= f.label :bookID %>
      <%= f.number_field :bookID %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :isbn %>
      <%= f.text_field :isbn %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :author %>
      <%= f.text_field :author %>
      
      <%= f.submit "Add a book", class: "btn btn-primary" %>
<% end %>
  </div>
</div>
<%= link_to 'Back', list_path %>
