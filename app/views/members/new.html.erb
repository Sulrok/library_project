<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@member) do |f| %>
      <%= f.label :Username %>
      <%= f.text_field :userName %>

      <%= f.label :Firstname %>
      <%= f.text_field :name %>

      <%= f.label :Lastname %>
      <%= f.text_field :surrName %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :Addr1 %>
      <%= f.text_field :addr1 %>

      <%= f.label :Addr2 %>
      <%= f.text_field :addr2 %>

      <%= f.label :Phone %>
      <%= f.text_field :tel %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>